<VBox alignment="CENTER" prefHeight="625.0" prefWidth="553.0" spacing="20" style="-fx-background-color: #f0f8ff; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ps.managmenrt.airport.SignupPage_controller">
<Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Signup Form" />

<GridPane alignment="CENTER" hgap="10" style="-fx-padding: 20; -fx-background-color: #e6f7ff; -fx-border-color: #003366; -fx-border-radius: 10; -fx-background-radius: 10;" vgap="10">
    <Label text="Username:" />
    <TextField fx:id="usernameField" promptText="Enter your username" GridPane.rowIndex="1" />

    <Label text="Email:" GridPane.rowIndex="4" />
    <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="6" />

    <Label text="Password:" GridPane.rowIndex="8" />
    <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="10" />

    <Label text="Confirm Password:" GridPane.rowIndex="13" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" GridPane.rowIndex="15" />

    <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="18">
        <Button onAction="#handleSignup" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-pref-width: 100px; -fx-padding: 10;" text="Sign Up" />
        <Button onAction="#goBack" style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-pref-width: 100px; -fx-padding: 10;" text="Back" />
    </HBox>
