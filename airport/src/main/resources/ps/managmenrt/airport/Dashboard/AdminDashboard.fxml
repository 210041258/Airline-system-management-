<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="350.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ps.managmenrt.airport.AdminDashboard_controller">

    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
    <Label layoutX="30.0" layoutY="16.0" prefHeight="57.0" prefWidth="152.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff; /* Blue color */" text="Welcome, Admin!" />

    <HBox fx:id="mainButtonsHBox" alignment="CENTER" layoutX="74.0" layoutY="116.0" prefHeight="30.0" prefWidth="670.0" spacing="20.0">
        <Button fx:id="viewFlightsButton" onAction="#handleViewFlightsButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="View Flights" />
        <Button fx:id="viewPassengersButton" onAction="#handleViewPassengersButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="View Passengers" />
        <Button fx:id="viewStaffButton" onAction="#handleViewStaffButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="View Staff" />
    </HBox>

    <HBox fx:id="reportsButtonsHBox" alignment="CENTER" layoutX="74.0" layoutY="185.0" prefHeight="30.0" prefWidth="670.0" spacing="20.0">
        <Button fx:id="viewFlightsReportsButton" onAction="#handleViewFlightsReportsButtonAction" prefHeight="30.0" prefWidth="177.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Flight Reports" />
        <Button fx:id="viewPassengerReportsButton" onAction="#handleViewPassengerReportsButtonAction" prefHeight="30.0" prefWidth="180.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Passenger Reports" />
    </HBox>



    <Button fx:id="logoutButton" layoutX="701.0" layoutY="30.0" onAction="#handleLogoutButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="Logout" />

</AnchorPane>
