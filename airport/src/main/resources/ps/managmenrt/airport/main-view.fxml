<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f0f8ff; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="ps.managmenrt.airport.main">
    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Welcome to the Airport Management System" />

    <ImageView fitHeight="400" fitWidth="400">
        <image>
            <Image url="@/R.jpg" />
        </image>
    </ImageView>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleLogin" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-padding: 10;" text="Login" />
        <Button onAction="#handleSignUp" style="-fx-background-color: #003366; -fx-text-fill: white; -fx-padding: 10;" text="Sign Up" />
    </HBox>
</VBox>
