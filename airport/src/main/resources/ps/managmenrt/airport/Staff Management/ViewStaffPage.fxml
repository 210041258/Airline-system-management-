<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="427.0" prefWidth="871.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ps.managmenrt.airport.ViewStaffPage_controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="590.0" text="Check your job position as the timetable for the duty distrubtiuon in the offical website" />
    <TableView fx:id="staffTable">
        <columns>
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="salaryColumn" text="Salary" />
            <TableColumn fx:id="jobPositionColumn" text="Job Position" />
        </columns>
    </TableView>
    <Button onAction="#onAddStaffClick" text="Add Staff" />
    <Button onAction="#onUpdateStaffClick" text="Update Staff" />
    <Button onAction="#onDeleteStaffClick" text="Delete Staff" />
    <Button onAction="#goBack" text="Back" />


</VBox>
