<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ps.managmenrt.airport.ViewPassengersPage_controller">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Passengers Management" style="-fx-font-size: 24px; -fx-text-fill: #333333;" />
    <TextField fx:id="searchField" promptText="Search by Username or Email" />
    <Button text="Search" onAction="#onSearchButtonClick"/>
    <TableView fx:id="passengerTable">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="dbalanceColumn" text="Balance" />
        </columns>
    </TableView>
    <Button text="Add Passenger" onAction="#onAddButtonClick"/>
    <Button text="Update Passenger" onAction="#onUpdateButtonClick"/>
    <Button text="Delete Passenger" onAction="#onDeleteButtonClick"/>

</VBox>

<Button onAction="#goBack" prefHeight="62.0" prefWidth="152.0" text="Back" textFill="#da1212">
<font>
    <Font name="Microsoft Uighur Bold" size="27.0" />
</font>
</Button>